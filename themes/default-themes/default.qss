/* Theme: Dark */
/* The line above is required to define the implemented theme style! */

QMainWindow {
    background-color: #1E1E1E;
    color: #FFFFFF;
}

/* Container */
#container {
    background-color: #1E1E1E;
    border: 1px solid #3C3C3C;
    border-radius: 8px;
}

/* Left Pane */
#leftPane {
    background-color: #2C2C2C;
    border: 1px solid #3C3C3C;
    border-radius: 8px;
    padding: 12px;
}

/* Open Folder Button */
#openFolderButton {
    background-color: #3A3A3A;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    padding: 6px;
}

#openFolderButton:hover {
    background-color: #505050;
}

/* Tab Bar */
QTabBar {
    background-color: #1E1E1E;
    border: none; /* Seamless look */
}

QTabBar::close-button {
    background-image: url({RESOURCE_PATH}/icons/close-dark.png); /* Use a darker close icon */
}

QTabBar::tab {
    background-color: #2C2C2C;
    color: #E6E6E6;
    padding: 4px 10px;
    border: 1px solid #3C3C3C;
    border-radius: 8px; /* Matches container radius */
    margin-bottom: 4px;
    margin-left: 1px;
    margin-right: 1px;
}

QTabWidget::pane {
    border: none; /* Remove the outer border */
    background: none; /* Ensure no background color shows */
}

QTabBar::tab:selected {
    background-color: #505050;
    color: #FFFFFF;
    border-radius: 8px; /* Consistent with other elements */
}

QTabBar::tab:hover {
    background-color: #3A3A3A;
    border-radius: 8px;
}

/* Text Edit */
QTextEdit {
    background-color: #2E2E2E;
    color: #F0F0F0;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
    padding: 12px;
}

/* Tree View */
QTreeView {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
    padding: 8px;
}

/* Horizontal ScrollBar */
QScrollBar:horizontal {
    background: #2C2C2C;
    height: 4px;
    margin: 0px 8px 0px 8px;
    border: none;
    border-radius: 2px;
}

QScrollBar:horizontal:hover {
    height: 12px;
    background: #3C3C3C;
}

QScrollBar::handle:horizontal {
    background: #505050;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background: #707070;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: none;
    width: 0px;
    height: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* Vertical ScrollBar */
QScrollBar:vertical {
    background: #2C2C2C;
    width: 4px;
    margin: 8px 0px 8px 0px;
    border: none;
    border-radius: 2px;
}

QScrollBar:vertical:hover {
    width: 12px;
    background: #3C3C3C;
}

QScrollBar::handle:vertical {
    background: #505050;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background: #707070;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
    height: 0px;
    width: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/* QDialog */
QDialog {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
}

QDialog QLabel {
    color: #E6E6E6;
}

/* QMessageBox */
QMessageBox {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
}

QMessageBox QPushButton {
    background-color: #3A3A3A;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 4px;
    padding: 6px;
}

QMessageBox QPushButton:hover {
    background-color: #505050;
}

QMessageBox QPushButton:pressed {
    background-color: #707070;
}

/* Settings menu */
#settingsDialog {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
}

#settingsTabWidget {
    border: none;
    background-color: #2C2C2C;
}

#settingsTabWidget QTabBar {
    background-color: #2C2C2C;
    border: none;
    padding: 0px;
    margin: 0px;
}

#settingsTabWidget QTabBar::tab {
    background-color: #3A3A3A;
    color: #E6E6E6;
    padding: 8px 16px;
    border: 1px solid #4A4A4A;
    border-radius: 6px 6px 0px 0px;
    margin-right: 2px;
    margin-left: 2px;
    text-align: center;
}

#settingsTabWidget QTabBar::tab:selected {
    background-color: #505050;
    color: #FFFFFF;
    border-color: #707070;
}

#settingsTabWidget QTabBar::tab:hover {
    background-color: #434343;
}

#generalTabContainer, #textTabContainer {
    background-color: #2C2C2C;
    border-radius: 8px;
    padding: 12px;
    border: 1px solid #4A4A4A;
}

#generalTitleLabel, #textTitleLabel {
    font-size: 22px;
    font-weight: bold;
    color: #E6E6E6;
    text-align: center;
}

#generalInfoLabel, #textInfoLabel {
    color: #E6E6E6;
    text-align: center;
}

#textTabContainer, #textTabContainer {
    background-color: #2C2C2C;
    border-radius: 8px;
    padding: 12px;
    border: 1px solid #4A4A4A;
}

#textTitleLabel, #textTitleLabel {
    font-size: 22px;
    font-weight: bold;
    color: #E6E6E6;
    text-align: center;
}

#textInfoLabel, #textInfoLabel {
    color: #E6E6E6;
    text-align: center;
}

#uiTabContainer, #uiTabContainer {
    background-color: #2C2C2C;
    border-radius: 8px;
    padding: 12px;
    border: 1px solid #4A4A4A;
}

#uiTitleLabel, #uiTitleLabel {
    font-size: 22px;
    font-weight: bold;
    color: #E6E6E6;
    text-align: center;
}

#uiInfoLabel, #uiInfoLabel {
    color: #E6E6E6;
    text-align: center;
}

/* The vertical menu */
#leftMenuFrame {
    border: 1px solid #3C3C3C;
    border-radius: 8px;
    background-color: #2C2C2C;
}

#explorerButton {
    border: none;
    background: transparent;
    padding: 5px;
    qproperty-icon: url({RESOURCE_PATH}/icons/explorer_dark.png)
}

#explorerButton:hover {
    background: transparent;
    border-radius: 4px;
}

#explorerButton:pressed {
    background: transparent;
    border-radius: 4px;
}

#settingsButton {
    border: none;
    background: transparent;
    padding: 5px;
    qproperty-icon: url({RESOURCE_PATH}/icons/settings_dark.png)
}

#settingsButton:hover {
    background: transparent;
    border-radius: 4px;
}

#settingsButton:pressed {
    background: transparent;
    border-radius: 4px;
}

/* Bottom Bar */
#bottomBar {
    background-color: #2C2C2C;
    border: 1px solid #3C3C3C;
    border-radius: 8px;
}

#openTerminalButton {
    border: none;
    background: transparent;
    qproperty-icon: url({RESOURCE_PATH}/icons/terminal_dark.png)
}

#openTerminalButton:hover {
    background-color: transparent;
}

/* Terminal Output */
#terminalOutput {
    background-color: #2E2E2E;
    color: #E0E0E0;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
    padding: 8px;
    margin-left: 8px;
    margin-right: 8px;
}
/* ScrollBar for Terminal Output */
#terminalOutput QScrollBar:vertical {
    background: #2C2C2C;
    width: 4px;
    border: none;
    border-radius: 2px;
}
#terminalOutput QScrollBar:vertical:hover {
    width: 12px;
    background: #3C3C3C;
}
#terminalOutput QScrollBar::handle:vertical {
    background: #505050;
    min-height: 20px;
    border-radius: 6px;
}
#terminalOutput QScrollBar::handle:vertical:hover {
    background: #707070;
}
#terminalOutput QScrollBar::add-line:vertical,
#terminalOutput QScrollBar::sub-line:vertical {
    background: none;
    height: 0px;
    width: 0px;
}
#terminalOutput QScrollBar::add-page:vertical,
#terminalOutput QScrollBar::sub-page:vertical {
    background: none;
}

#searchButton {
    border: none;
    background: transparent;
    padding: 5px;
    qproperty-icon: url({RESOURCE_PATH}/icons/search_dark.png)
}

#searchButton:hover {
    background: transparent;
    border-radius: 4px;
}

#searchButton:pressed {
    background: transparent;
    border-radius: 4px;
}

/* Bottom Bar */
#bottomBar {
    background-color: #2C2C2C;
    border: 1px solid #3C3C3C;
    border-radius: 8px;
    margin-left: 7px;
    margin-right: 7px;
}

#openTerminalButton {
    border: none;
    background: transparent;
    qproperty-icon: url({RESOURCE_PATH}/icons/terminal_dark.png)
}

#openTerminalButton:hover {
    background-color: transparent;
}

/* Preferences */
QPushButton#saveGeneralButton, 
QPushButton#saveTextButton, 
QPushButton#saveUiButton {
    background-color: #3A3A3A;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 14px;
}

QPushButton#saveGeneralButton:hover, 
QPushButton#saveTextButton:hover, 
QPushButton#saveUiButton:hover {
    background-color: #505050;
}

QPushButton#saveGeneralButton:pressed, 
QPushButton#saveTextButton:pressed, 
QPushButton#saveUiButton:pressed {
    background-color: #707070;
}

/* Dropdown */
QComboBox#terminalTypeDropdown {
    background-color: #3A3A3A;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
    padding: 4px 8px;
    font-size: 14px;
}

QComboBox#terminalTypeDropdown:hover {
    border: 1px solid #5A5A5A;
}

QComboBox#terminalTypeDropdown::down-arrow {
    image: url({RESOURCE_PATH}/icons/arrow_dark.png);
    width: 10px;
    height: 10px;
}

QComboBox#terminalTypeDropdown::down-arrow:hover {
    image: url({RESOURCE_PATH}/icons/arrow_dark.png);
}

QComboBox#terminalTypeDropdown::down-arrow:pressed {
    image: url({RESOURCE_PATH}/icons/arrow_dark.png);
}

QComboBox#terminalTypeDropdown::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #4A4A4A;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    background-color: #3C3C3C;
}

QComboBox#terminalTypeDropdown QAbstractItemView {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #3C3C3C;
    border-radius: 8px;
    selection-background-color: #505050;
    selection-color: #FFFFFF;
}

/* Check Updates */
#updatesDialog {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 8px;
    padding: 16px;
}

#updatesTitleLabel {
    font-size: 24px;
    font-weight: bold;
    color: #E6E6E6;
    text-align: center;
    margin-bottom: 16px;
}

#currentVersionLabel, #latestVersionLabel {
    color: #E6E6E6;
    text-align: center;
    font-size: 16px;
    margin: 8px 0;
}

#copyrightLabel {
    color: #A0A0A0;
    text-align: center;
    font-size: 14px;
    margin-top: 12px;
}

#updateButton {
    background-color: #3A3A3A;
    color: #E6E6E6;
    border: 1px solid #4A4A4A;
    border-radius: 6px;
    padding: 10px 20px;
    font-size: 14px;
    margin-top: 16px;
    cursor: pointer;
}

#updateButton:enabled {
    background-color: #505050;
    color: #FFFFFF;
    border-color: #707070;
}

#updateButton:disabled {
    background-color: #2E2E2E;
    color: #A0A0A0;
    border-color: #4A4A4A;
    cursor: not-allowed;
}

#updateButton:hover:enabled {
    background-color: #606060;
}

#updateButton:pressed:enabled {
    background-color: #707070;
    border-color: #909090;
}

/* Menu Bar */
QMenuBar {
    background-color: #2C2C2C;
    color: #E6E6E6;
    border: 0px;
}

QMenuBar::item:selected {
    background-color: #505050;
}
